LAYOUT=$(echo -e "dock\nundock\nmirror" | dmenu -i -p "Monitor Layout")
[ "$LAYOUT" = "" ] && exit 2 

case "$LAYOUT" in
        dock)
            xrandr --output HDMI2 --auto
            xrandr --output eDP1 --off
            ;;

        undock)
	    xrandr --output HDMI2 --off
	    xrandr --output eDP1 --auto
            ;;
        mirror)
            xrandr --output HDMI2 --same-as eDP1
            ;;
esac

changeWall
