# PROGRAMS

super + {F1,F2,F3}
        {discord,$BROWSER,$BROWSER $(calendar --curr-link)}

super + Home
        meross-cli --toggle

super + {_,shift +} d
        {dmenu_IQ,menu}

@Print
        cuffs --select --clipboard

control + @Print
        cuffs --clipboard

alt + @Print
        cuffs --select --floating

super + {_,shift +,control +} Return
        {$TERMINAL,termFromHere,termFromCal}

super + w
        wall

super + control + l
        lock

control + alt + Tab
        notify-send lel lol

# XF86 KEYS

XF86MonBrightness{Up,Down}
        blind {+,-}

XF86Audio{Raise,Lower}Volume
        deaf {+,-}

super + {Up, Down}
        deaf {+,-}

XF86AudioMute
        deaf mute

XF86AudioMicMute
        deaf mic

XF86Audio{Play,Stop}
        udm {--play-pause,--stop}

super + {Prior,Next}
        udm {--play-pause,--stop}

XF86Audio{Prev,Next}
        udm {--previous, --next}

super + {Left,Right}
        udm {--previous, --next}

XF86Tools
        cd $DOTFILES && $TERMINAL

# WM KEYBINDS

## MISC

super + shift + q
        i3-msg kill

super + shift + r
        i3-msg restart

super + shift + e
        i3-msg exit


## FOCUS

super + {1-9, 0, Tab}
        i3-msg workspace {1-9,10,back_and_forth}

super + {h,j,k,l}
        i3-msg focus {left,down,up,right}

## CONTAINER

super + shift + {1-9,0}
        i3-msg move container to workspace {1-9,10}

super + shift + {h,j,k,l}
        i3-msg move {left,down,up,right}

super + alt + {h,j,k,l}
       i3-msg resize {shrink width,grow height,shrink height,grow width} 10 px or 10 ppt


## CHANGE LAYOUT

super + space
        i3-msg 'floating toggle'

super + shift + space
        i3-msg 'floating toggle; sticky toggle'

super + v
        i3-msg split toggle

super + f
        i3-msg fullscreen toggle

super + e
        i3-msg layout toggle tabbed splith
