#!/bin/bash
# Install dotfiles and programs that are part of my [workflow](.workflow)

set -e

source .workflow

[[ "$DOTFILES" ]] || export DOTFILES=$(pwd)

_global_dark_theme(){
    wget https://github.com/Mrcuve0/Aritim-Dark/archive/master.zip
    unzip master.zip
    readonly themes_dir="$HOME"/.themes
    mkdir -p "$themes_dir"
    mv Aritim-Dark-master/GTK "$themes_dir"/ayu
    rm -rf Aritim-Dark-master master.zip
}

_make_repo(){
    mkdir -p ~/repos
    name="$(basename "$1")"
    echo -e "\033[35mInstalling $name...\033[33m"
    git clone "$1" ~/repos/"$name"
    sudo make install -C ~/repos/"$name"
    rm -rf ~/repos/"$name"
    echo -e "\033[0m"
}

read -r -p "Type of installation [(F)ULL | (h)eadless]: "
case "$REPLY" in
    FULL|F|"")
        bash nail
        FULL="yes"
        ;;
    headless|h)
        bash nail --headless
        ;;
    *)
        echo "Invalid type of installation"
        exit
        ;;
esac

sh "$DOTFILES/storeTools"

yes | sudo pacman -S --needed  "${essential_pacman[@]}"

for repo in "${essential_repos[@]}"; do
    _make_repo "$repo"
done

if [[ $FULL ]]; then
    yes | sudo pacman -S --needed  "${full_pacman[@]}"

    for repo in "${full_repos[@]}"; do
        _make_repo "$repo"
    done

    _global_dark_theme
fi
