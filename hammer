#!/bin/bash
set -e
[[ "$DOTFILES" ]] || export DOTFILES=$(pwd)

read -r -p "Type of install [(F)ULL | (h)eadless]: "
case "$REPLY" in
    FULL|F|"")
        bash nail
        ;;
    headless|h)
        bash nail --headless
        ;;
esac

###### Install standard workflow #####
sh storeTools

source .workflow
#packages
yes | sudo pacman -S --needed  "${essentials[@]}"

#aur packages
for p in "${aurpackages[@]}"
do
    aura -S "$p"
done

