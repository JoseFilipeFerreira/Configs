#compdef pdf zathura za
#autoload

_pdf() { 
    _arguments '[file]:filename:->files'
    case "$state" in
        files)
            local -a pdf_files
            pdf_files=( *.pdf )
            _multi_parts / pdf_files
            ;;
        flags)
            _values -s , 'flags' a b c d e
            ;;
    esac
}

compctl -/ -g '*.pdf' pdf

_pdf "$@"
