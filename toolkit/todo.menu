#!/bin/sh
# simple TODO list

file="$XDG_CACHE_HOME/dmenu/todo"
touch "$file"
prompt="Add/delete a task: "

cmd=$(LC_ALL=C sort "$file" | dmenu -l 20 -p "$prompt")
while [ -n "$cmd" ]; do
    if grep -q "^$cmd\$" "$file"; then
        grep -v "^$cmd\$" "$file" > "$file.$$"
        mv "$file.$$" "$file"
    else
        echo "$cmd" >> "$file"
    fi

    cmd=$(LC_ALL=C sort "$file" | dmenu -l 20 -p "$prompt")
done

exit 0
